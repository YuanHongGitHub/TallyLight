<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:yh="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.qq281982108.tallylight.view.TopBarRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.qq281982108.tallylight.view.ViewPagerIndicator
        android:id="@+id/id_indicator_add_page"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorLightBlue"
        android:orientation="horizontal"
        yh:item_count="4"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_indicator_add_page_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>