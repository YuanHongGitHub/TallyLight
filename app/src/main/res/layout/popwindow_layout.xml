<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorWhite">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        >

        <Button
            android:id="@+id/calculator_divide"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:paddingBottom="7dp"
            android:text="÷"
            android:textColor="#FFF"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/calculator_multiply"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:paddingBottom="7dp"
            android:text="*"
            android:textColor="#FFF"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/calculator_subtract"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="－"
            android:textColor="#FFF"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/calculator_add"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="40sp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        >

        <Button
            android:id="@+id/calculator_1"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_2"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_3"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_back"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="﹤"
            android:textColor="#FFF"
            android:textSize="20pt"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        >

        <Button
            android:id="@+id/calculator_4"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_5"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_6"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_clear"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="C"
            android:textColor="#FFF"
            android:textSize="20pt"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        >

        <Button
            android:id="@+id/calculator_7"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_8"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_9"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_result"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="="
            android:textColor="#FFF"
            android:textSize="20pt"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        >

        <Button
            android:id="@+id/calculator_plus_minus"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="+/-"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_0"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_dot"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="."
            android:textColor="#FFF"
            android:textSize="20pt"/>

        <Button
            android:id="@+id/calculator_confirm"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.25"
            android:background="@color/colorLightBlue"
            android:text="确认"
            android:textColor="#FFF"
            android:textSize="20pt"/>
    </TableRow>

</TableLayout>